// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  email     String    @unique
  firstName String
  lastName  String
  password  String
  mobile    String    @unique
  address   Address?
  posts     Post[]
  comments  Comment[]
}

model Post {
  id        String    @id @default(uuid())
  title     String
  content   String?
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  comments  Comment[]
  tags      Tag[]
  likes     Int?
}

model Comment {
  id      String @id @default(uuid())
  content String
  userId  String
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id])
  postId    String
}

model Address {
  id       String @id @default(uuid())
  suburb   String
  postCode String
  country  String
  state    String
  user     User   @relation(fields: [userId], references: [id])
  userId   String @unique
}

model Tag {
  id    String @id @default(uuid())
  title String @unique
  posts Post[]
}
